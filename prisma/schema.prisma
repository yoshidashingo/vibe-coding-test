generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  ipAddress    String
  createdAt    DateTime @default(now())
  lastPostedAt DateTime @default(now())
  posts        Post[]
}

model Board {
  id          String   @id @default(uuid())
  name        String
  description String
  category    String
  createdAt   DateTime @default(now())
  threads     Thread[]
}

model Thread {
  id           String   @id @default(uuid())
  board        Board    @relation(fields: [boardId], references: [id])
  boardId      String
  title        String
  createdAt    DateTime @default(now())
  lastPostedAt DateTime @default(now())
  postCount    Int      @default(0)
  posts        Post[]
}

model Post {
  id        String   @id @default(uuid())
  thread    Thread   @relation(fields: [threadId], references: [id])
  threadId  String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  content   String
  nickname  String?
  trip      String?
  imageUrl  String?
  ipAddress String
  createdAt DateTime @default(now())
}
